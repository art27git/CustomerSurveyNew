@using System.Configuration
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Bayer Survey</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/CSS/styles.css" rel="stylesheet"/>
        <script src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/functions.js")" type="text/javascript"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    @Html.ActionLink(" ", "Index", "Site", null, new { @class = "topLogo" })
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Link Emailer</p>
                </div>
            </div>
        </footer>
    </body>
</html>
